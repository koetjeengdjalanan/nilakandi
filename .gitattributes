# Set default behavior to automatically normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files to be normalized and converted to LF
*.py text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files should be handled properly
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.sqlite3 binary

# Handle Django specific file types
*.mo binary
*.po text eol=lf

# Handle migrations files
migrations/*.py text eol=lf

# Handle static and media files
static/** binary
media/** binary